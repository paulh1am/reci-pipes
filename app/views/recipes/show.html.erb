<img src="<%= @recipe.img_url %>" alt="" style="border-radius:50%; width:200px; height:200px"></img>
<h3><%= @recipe.name %></h3>
<%= @recipe.ingredients %>
<hr>
<p>
  <%= @recipe.instructions %></p>
<hr>
<button><a href="<%= edit_chef_cookbook_recipe_path %>">EDIT</a>
</button><hr>
