<%= form_for [@chef, @cookbook, @recipe] do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <hr>
  <%= f.label :ingredients %> <br>
  <%= f.text_area(:ingredients, size: '50x10')  %>
  <hr>
  <%= f.label :instructions %> <br>
  <%= f.text_area(:instructions, size: '50x10')%>
  <hr>
  <%= f.label :img_url %>
  <%= f.text_field :img_url %>

  <%= f.submit %>

<% end %>
