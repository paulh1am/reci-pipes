<h5>Chef <%= @chef.name %></h5>


<div class="pro-head">


</div>

<!-- fix this links -->




<br/>
<hr>
<% @chef.cookbooks.each do |book| %>
  <div class="row">
    <div class="col-lg-6 col-md-6 col-sm-6">
      <div class="bk_img"><img src="<%= book.cover_art_url %>" alt="" style="border-radius:50%; height:200px; width:200px"></div>
    </div>

    <div class="col-lg-6 col-md-6 col-sm-6">
      <ul class="chefbook">

        <li>
          <a href="/chefs/<%= @chef.id %>/cookbooks/<%= book.id %>"><%= book.title %></a>
          <ul>
            <% book.recipes.each do |recipe| %>
              <li>
                <%= link_to recipe.name, chef_cookbook_recipe_path(@chef.id, book.id, recipe.id)  %>

              </li>
            <% end %>
          </ul>

          <%= link_to "Add Recipe", new_chef_cookbook_recipe_path(@chef.id, book.id), method: :get  %>
        </li>
        <!--  <li>
        <div class='cover' style="display:block; height:200px; width:200px; background:url('<%= book.cover_art_url %>')">
        </li> -->
      </ul>
    </div>
  </div>
  <hr>
<% end %>
