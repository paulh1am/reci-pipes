<h4><%= @cookbook.title %></h4>
<div class="row">
  <div class="col-lg-6 col-md-6 col-sm-6">
    <img src="<%= @cookbook.cover_art_url %>" style="width:200px; height:200px; border-radius:50%">
    <hr/>
    <button><%= link_to "New Recipe", new_chef_cookbook_recipe_path(@chef.id, @cookbook.id)  %>
    </button>
    <button><%= link_to "Edit Book", edit_chef_cookbook_path(@chef.id, @cookbook.id)  %>
    </button>
  </div>
  <div class="col-lg-6 col-md-6 col-sm-6">
    <ul class="chefbook">
      <% @cookbook.recipes.each do |recipe| %>
        <li>
          <h3>
            <%= link_to recipe.name, chef_cookbook_recipe_path(@chef.id, @cookbook.id, recipe.id)  %>
          </h3>
          <%= recipe.id %>
        </li>
        <li>
          <%= recipe.ingredients %>
        </li>

      <% end %>
    </ul>
  </div>
</div>
<form action="/chefs/<%= @chef.id %>/cookbooks/<%= @cookbook.id %>" method='post'>
  <%= token_tag %>
  <input type="hidden" name="_method" value="delete">
  <button type='submit'>Delete Book</button>
